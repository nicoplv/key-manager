{% set getkeys = true %}
{% extends 'globals/main.twig' %}

{% block body %}
<div class="large-6 medium-12 columns">
	<form action="" method="post" data-abide>
		<div class="row">
			<div class="large-12 columns">
				<label for="email">
					Email <small>required</small>
					<input type="email" id="email" name="email" placeholder="john.doe@email.com" required>
				</label>
				<small class="error">An email address is required.</small>
			</div>
			<div class="large-12 columns">
				<label for="tag">
					Tag <small>required</small>
					<select name="tag" id="tag" name="tag" required>
						{% for tag in tags %}
							<option value="{{ tag }}">{{ tag }}</option>
						{% endfor %}
					</select>
				</label>
			</div>
			<div class="large-12 columns">
				<label for="number">
					Number <small>required</small>
					<input type="number" id="number" name="number" min="0" placeholder="0" required>
				</label>
				<small class="error">Number of key is required.</small>
			</div>
			<div class="large-12 columns margin-top">
				<button type="submit" class="large-12">Get keys</button>
			</div>
		</div>
	</form>
</div>
<div class="large-6 medium-12 columns">
	{% set noTag = true %}
	{% set noSended = true %}
	{% set noTo = true %}
	{% include 'templates/keystable.twig' %}
</div>
{% endblock %}